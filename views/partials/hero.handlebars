<section class="hero">
    <div class="container">
        <div class="row">
            <div class="column">
                <h5>{{pageTitle}}</h5>
            </div>
        </div>
        <div class="row">
            <div class="column">
                <p>
                    Contact: {{home.email}}
                    <br />
                    Github: {{home.github}}
                </p>
            </div>
        </div>
        <div class="row">
            <div class="column column-60 column-offset-20">
                <h4>Tech I Work With: </h4>
                <p>
                    {{#each skills}}
                    <button class="button-small">{{this}}</button>
                    {{/each}}
                </p>
            </div>
        </div>
        {{> right-now}}
    </div>
</section>